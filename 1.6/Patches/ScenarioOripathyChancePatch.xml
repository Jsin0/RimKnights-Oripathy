<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Patches all scenarios to include a 5% chance for each pawn to have oripathy-->
	<Operation Class="PatchOperationAdd">
	  <xpath>Defs/ScenarioDef/scenario/parts</xpath>
	  <value>
		<li Class="ScenPart_ForcedHediff">
          <def>ForcedHediff</def>
          <visible>false</visible>
          <context>All</context>
          <chance>0.05</chance>
          <hediff>RK_Oripathy</hediff>
          <hideOffMap>true</hideOffMap>
          <severityRange>0.01~0.15</severityRange>
        </li>
	  </value>
	</Operation>
</Patch>